@using REPORT_MANAGEMENT_APP.Models
@model LoginViewModel

@{
    ViewBag.Title = "Đăng nhập";
}

<div class="row-fluid" style="margin-top: 200px">
    <div class="span4 offset1">
        <img src="~/img/login-background.png" class="img-fluid" alt="" style="width: 80%">
    </div>
    <div class="span3" style="margin-top: 35px">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h2>ĐĂNG NHẬP</h2>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="email">
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "input-block-level", @placeholder = "Tài khoản" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="pw">
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "input-block-level", @placeholder = "Mật khẩu" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <label class="checkbox" style="margin-bottom: 10px">
                    @Html.CheckBoxFor(m => m.RememberMe)
                    Ghi nhớ
                </label>
                <div class="submit">
                        <input type="submit" value="Đăng nhập" class="btn btn-primary" />
                </div>
            }
            <div class="form-group">
                    @Html.ActionLink("Đăng ký tài khoản mới", "Register")
            </div>
            <div class="forget">
                <a href="#"><span>Quên mật khẩu?</span></a>
            </div>
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}