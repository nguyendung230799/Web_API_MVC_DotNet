@model REPORT_MANAGEMENT_APP.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Thay đổi mật khẩu";
}


<div class="box box-bordered box-color">
    <div class="box-title">
        <h3><i class="icon-th-list"></i>@ViewBag.Title</h3>
    </div>
    <div class="box-content nopadding">
        @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal form-bordered", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="control-group">
                @Html.Label("Mật khẩu cũ", new { @class = "control-label" })
                <div class="controls">
                    @Html.PasswordFor(m => m.OldPassword, new { @class = "input-xlarge", @placeholder = "Mật khẩu cũ" })
                </div>
            </div>
            <div class="control-group">
                @Html.Label("Mật khẩu mới", new { @class = "control-label" })
                <div class="controls">
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "input-xlarge", @placeholder = "Mật khẩu mới" })
                </div>
            </div>
            <div class="control-group">
                @Html.Label("Nhập lại mật khẩu mới", new { @class = "control-label" })
                <div class="controls">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input-xlarge", @placeholder = "Nhập lại mật khẩu mới" })
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Tích chọn<small>Thêm thông tin ở đây</small></label>
                <div class="controls">
                    <label class='checkbox'>
                        <input type="checkbox" name="checkbox"> Lorem ipsum eiusmod
                    </label>
                    <label class='checkbox'>
                        <input type="checkbox" name="checkbox"> ipsum eiusmod
                    </label>
                </div>
            </div>
            <div class="control-group">
                <label for="textarea" class="control-label">Mô tả</label>
                <div class="controls">
                    <textarea name="textarea" id="textarea" rows="5" class="input-block-level">Lorem ipsum mollit minim fugiat tempor dolore sit officia ut dolore. </textarea>
                </div>
            </div>
            <div class="form-actions">
                <input type="submit" value="Cập nhật" class="btn btn-sm btn-success"
                       style="width:auto" />
                @Html.ActionLink("Quay lại", "ManageUser", new { area = "" }, new { @class = "btn btn-sm btn-primary" })
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}